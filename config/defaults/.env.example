#############################################################################
# Cloud Security Demo - Environment Variables
# 
# This file contains environment-specific variables used across the project.
# DO NOT commit the actual .env file to version control.
#############################################################################

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=

# Project Information
PROJECT_NAME=cloudsecdemo
ENVIRONMENT=secure
OWNER_EMAIL=

# Infrastructure Settings
TERRAFORM_STATE_BUCKET=
TERRAFORM_STATE_KEY=cloudsecdemo/terraform.tfstate
TERRAFORM_STATE_REGION=us-east-1
TERRAFORM_STATE_DYNAMODB_TABLE=terraform-state-lock

# Container Registry
ECR_REPOSITORY=

# Monitoring Configuration
ALERT_EMAIL=
SLACK_WEBHOOK_URL=

# Application Settings
APP_NAME=demo-app
APP_PORT=3000
APP_DOMAIN=

# Database Configuration
DB_NAME=demodb
DB_PORT=27017

# Security Settings
ENABLE_MFA=true
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGS=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_FREQUENCY=daily

# Resource Tags
TAG_PROJECT=cloudsecdemo
TAG_ENVIRONMENT=${ENVIRONMENT}
TAG_OWNER=${OWNER_EMAIL}

# Debug Settings (development only)
DEBUG=false
VERBOSE_LOGGING=false
