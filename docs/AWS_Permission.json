{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ec2:CreateVpc",
				"ec2:CreateSubnet",
				"ec2:CreateSecurityGroup",
				"ec2:CreateTags",
				"ec2:DeleteVpc",
				"ec2:DeleteSubnet",
				"ec2:DeleteSecurityGroup",
				"ec2:DescribeVpcs",
				"ec2:DescribeRegions",
				"ec2:DescribeSubnets",
				"ec2:DescribeSecurityGroups",
				"ec2:AuthorizeSecurityGroupIngress",
				"ec2:RevokeSecurityGroupIngress",
				"dynamodb:PutItem"
			],
			"Resource": [
				"arn:aws:ec2:*:*:vpc/*",
				"arn:aws:ec2:*:*:subnet/*",
				"arn:aws:ec2:*:*:security-group/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"eks:CreateCluster",
				"eks:DeleteCluster",
				"eks:ListClusters",
				"eks:UpdateClusterConfig",
				"eks:UpdateClusterVersion",
				"eks:CreateNodegroup",
				"eks:DeleteNodegroup",
				"eks:DescribeNodegroup"
			],
			"Resource": [
				"arn:aws:eks:*:*:cluster/cloudsecdemo-*",
				"arn:aws:eks:*:*:nodegroup/cloudsecdemo-*/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"s3:CreateBucket",
				"s3:DeleteBucket",
				"s3:PutBucketPolicy",
				"s3:GetBucketPolicy",
				"s3:ListBucket",
				"s3:GetObject",
				"s3:PutObject",
				"s3:DeleteObject",
				"s3:PutEncryptionConfiguration",
				"s3:GetEncryptionConfiguration",
				"s3:PutBucketVersioning",
				"s3:GetBucketVersioning"
			],
			"Resource": "arn:aws:s3:::cloudsecdemo-*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"lambda:CreateFunction",
				"lambda:DeleteFunction",
				"lambda:UpdateFunctionCode",
				"lambda:UpdateFunctionConfiguration",
				"lambda:GetFunction",
				"lambda:InvokeFunction"
			],
			"Resource": "arn:aws:lambda:*:*:function:cloudsecdemo-*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"cloudwatch:PutMetricData",
				"cloudwatch:GetMetricData",
				"cloudwatch:PutDashboard",
				"cloudwatch:DeleteDashboards",
				"logs:CreateLogGroup",
				"logs:DeleteLogGroup",
				"logs:PutLogEvents",
				"logs:GetLogEvents"
			],
			"Resource": [
				"arn:aws:cloudwatch:*:*:dashboard/cloudsecdemo-*",
				"arn:aws:logs:*:*:log-group:/aws/cloudsecdemo/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"iam:CreateRole",
				"iam:DeleteRole",
				"iam:PutRolePolicy",
				"iam:DeleteRolePolicy",
				"iam:GetRole",
				"iam:GetRolePolicy",
				"iam:PassRole"
			],
			"Resource": "arn:aws:iam::*:role/cloudsecdemo-*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"config:PutConfigRule",
				"config:DeleteConfigRule",
				"config:DescribeConfigRules",
				"guardduty:CreateDetector",
				"guardduty:DeleteDetector",
				"guardduty:GetDetector",
				"securityhub:EnableSecurityHub",
				"securityhub:DisableSecurityHub",
				"securityhub:GetFindings"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"dynamodb:PutItem",
				"dynamodb:GetItem"
			],
			"Resource": "arn:aws:dynamodb:[your-region]:[your-AWS-Account-ID]:table/terraform-state-lock"
		}
	]
}
